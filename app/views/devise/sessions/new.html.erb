<div class = "container mx-auto pt-5 flex justify-center aligun-center">
  <h1 class = "col-6 col-sm-12 mx-auto font-bold pt-5 text-center">ログイン</h1>
  <% if @user.errors.any? %>
    <div class = "col-6 col-sm-12 mx-auto">
      <%= @user.errors.count %>件のエラーが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class = "col-6 mx-auto pt-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class = "mb-1">
        <div class = "pt-5 pb-1">
          <label for = "email">メールアドレス</label>
        </div>
          <%= f.email_field :email, class: "form-control", id: "email" %>
      </div>
      <div class = "mb-1">
        <div class = "pt-5 pb-1">
          <label for = "password">パスワード</label>
          <%= f.password_field :password, class: "form-control", id: "password" %>
        </div>
      </div>
      <div class = "mb-1">
        <div class = "pb-1">
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </div>
      </div>
      <div class = "pb-5 justify-center align-center">
        <div class = "pt-4">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    <div class = "text-center pb-3">
      <p>ユーザー登録の方は　
        <%= link_to new_user_registration_path do %>
          こちら
        <% end %>
      </p>
    </div>
</div>

