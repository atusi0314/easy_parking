<h1>画像投稿フォーム</h1>
<% if @parking.errors.any? %>
  <%= @parking.errors.count %>件のエラーが発生しました
  <ul>
    <% @parking.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @parking do |f| %>
  <h4>スポット名</h4>
  <%= f.text_field :spot_name %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  <h4>どんな駐車場？</h4>
  <%= f.text_area :caption %>
  <h4>写真</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <%= f.submit '投稿' %>
<% end %>
